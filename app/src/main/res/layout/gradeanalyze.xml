<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="84dp"
                    android:background="@drawable/topbar">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="60dp"
                        android:layout_marginTop="20sp"
                        android:text="成绩分析"
                        android:textColor="#2D58EF"
                        android:textSize="30sp">

                    </TextView>

                    <Button
                        android:id="@+id/enterBack1"
                        android:layout_width="40sp"
                        android:layout_height="40sp"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="9dp"
                        android:layout_marginTop="20dp"
                        android:background="@drawable/back"></Button>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">


                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/middlebar">

                    <TextView
                        android:id="@+id/Subject1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginTop="10sp"
                        android:text="subject1"
                        android:textColor="#2D58EF"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/score1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30sp"
                        android:layout_marginBottom="10dp"
                        android:text="成绩:"
                        android:textSize="20dp">


                    </TextView>

                    <TextView
                        android:id="@+id/rate1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:text="level"
                        android:textSize="40dp">

                    </TextView>

                    <TextView
                        android:id="@+id/gpa1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="10dp"
                        android:text="绩点:"
                        android:textSize="20dp">

                    </TextView>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/middlebar">

                    <TextView
                        android:id="@+id/Subject2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginTop="10sp"
                        android:text="subject2"
                        android:textColor="#2D58EF"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/score2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30sp"
                        android:layout_marginBottom="10dp"
                        android:text="成绩:"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/rate2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:text="level"
                        android:textSize="40dp">

                    </TextView>

                    <TextView
                        android:id="@+id/gpa2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="10dp"
                        android:text="绩点:"
                        android:textSize="20dp">

                    </TextView>


                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/middlebar">

                    <TextView
                        android:id="@+id/Subject3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginBottom="10dp"
                        android:text="subject3"
                        android:textColor="#2D58EF"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/score3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30sp"
                        android:layout_marginBottom="10dp"
                        android:text="成绩:"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/rate3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:text="level"
                        android:textSize="40dp">

                    </TextView>

                    <TextView
                        android:id="@+id/gpa3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="10dp"
                        android:text="绩点:"
                        android:textSize="20dp">

                    </TextView>


                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/middlebar">

                    <TextView
                        android:id="@+id/Subject4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="30sp"
                        android:layout_marginTop="10sp"
                        android:text="subject4"
                        android:textColor="#2D58EF"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/score4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="30sp"
                        android:layout_marginBottom="10dp"
                        android:text="成绩:"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/rate4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="40dp"
                        android:text="level"
                        android:textSize="40dp">

                    </TextView>

                    <TextView
                        android:id="@+id/gpa4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginLeft="160dp"
                        android:layout_marginBottom="10dp"
                        android:text="绩点:"
                        android:textSize="20dp">

                    </TextView>

                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="10"
            android:orientation="horizontal">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4"
                android:background="@drawable/middlebar">

                <ImageView
                    android:id="@+id/image3"
                    android:layout_width="80sp"
                    android:layout_height="80sp"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="20sp"
                    android:layout_marginTop="90sp"
                    android:src="@drawable/image3"></ImageView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="10sp"
                    android:text="平均分"
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/weightScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="30sp"
                    android:layout_marginTop="45sp"
                    android:text="grade"
                    android:textColor="#2D58EF"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="10sp"
                    android:text="总学分："
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/totalScore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="45sp"
                    android:text="gpa"
                    android:textColor="#2D58EF"
                    android:textSize="20dp">

                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="90dp"
                    android:text="总绩点："
                    android:textColor="@color/black"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/totalGpa"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110sp"
                    android:layout_marginTop="125dp"
                    android:text="grade"
                    android:textColor="#2D58EF"
                    android:textSize="20dp">

                </TextView>

            </RelativeLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="4">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/middlebar">

                    <ImageView
                        android:id="@+id/image1"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginLeft="10sp"
                        android:layout_marginTop="90sp"
                        android:src="@drawable/image1">

                    </ImageView>

                    <ImageView
                        android:id="@+id/image2"
                        android:layout_width="80sp"
                        android:layout_height="80sp"
                        android:layout_marginStart="10sp"
                        android:layout_marginLeft="20sp"
                        android:layout_marginTop="10sp"
                        android:layout_marginEnd="10sp"
                        android:src="@drawable/image2">

                    </ImageView>

                    <TextView
                        android:id="@+id/stability"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="10sp"
                        android:text="稳定性:"
                        android:textColor="@color/black"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/stabilityResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="45dp"
                        android:text="hhhhhhhh"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/overallRank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="90dp"
                        android:text="综合评级:"
                        android:textColor="@color/black"
                        android:textSize="20dp">

                    </TextView>

                    <TextView
                        android:id="@+id/overallRankResult"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="100dp"
                        android:layout_marginTop="125dp"
                        android:text="level"
                        android:textColor="#2D58EF"
                        android:textSize="20dp">

                    </TextView>
                </RelativeLayout>


            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/getAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginEnd="100dp"
            android:text="获取建议"></Button>

    </LinearLayout>

</RelativeLayout>